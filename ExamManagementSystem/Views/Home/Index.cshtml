@{
    ViewData["Title"] = "Index";
}

<div class="container mt-4">
    <div class="row mt-4">
        <div class="col-md-6 mb-4">
            <div class="card shadow rounded">
                <div class="card-body">
                    <h5 class="card-title text-center">Students per Class</h5>
                    <canvas id="studentsPerClassChart"></canvas>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card shadow rounded">
                <div class="card-body">
                    <h5 class="card-title text-center">Exams per Lesson</h5>
                    <canvas id="examsPerLessonChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card shadow rounded">
                <div class="card-body">
                    <h5 class="card-title text-center">Teachers per Lesson</h5>
                    <canvas id="teachersPerLessonChart"></canvas>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card shadow rounded">
                <div class="card-body">
                    <h5 class="card-title text-center">Exam Results (Avg Score)</h5>
                    <canvas id="examResultsChart"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        new Chart(document.getElementById("studentsPerClassChart"), {
            type: "bar",
            data: {
                labels: ["Class A", "Class B", "Class C", "Class D"],
                datasets: [{
                    label: "Students",
                    data: [25, 30, 20, 15],
                    backgroundColor: "rgba(54, 162, 235, 0.7)"
                }]
            }
        });

        new Chart(document.getElementById("examsPerLessonChart"), {
            type: "bar",
            data: {
                labels: ["Math", "Physics", "Chemistry", "Biology"],
                datasets: [{
                    label: "Exams",
                    data: [5, 3, 4, 2],
                    backgroundColor: "rgba(255, 99, 132, 0.7)"
                }]
            }
        });

        new Chart(document.getElementById("teachersPerLessonChart"), {
            type: "bar",
            data: {
                labels: ["Math", "Physics", "Chemistry", "Biology"],
                datasets: [{
                    label: "Teachers",
                    data: [2, 1, 3, 2],
                    backgroundColor: "rgba(75, 192, 192, 0.7)"
                }]
            }
        });

        new Chart(document.getElementById("examResultsChart"), {
            type: "bar",
            data: {
                labels: ["Jan", "Feb", "Mar", "Apr", "May"],
                datasets: [{
                    label: "Average Score",
                    data: [70, 75, 80, 85, 78],
                    backgroundColor: "rgba(255, 159, 64, 0.7)"
                }]
            }
        });
    </script>
}